# ----------------------------------------
# Service / Environment
# ----------------------------------------
NODE_ENV=development          # development | test | production
PORT=3000                     # Local server port
SERVICE_NAME=unsaid-api
SERVICE_VERSION=0.0.0

# ----------------------------------------
# Logging
# ----------------------------------------
LOG_LEVEL=info                # trace | debug | info | warn | error | fatal
PRETTY_LOGS=true              # pretty console logs in dev

# ----------------------------------------
# JWT / Authentication
# ----------------------------------------
JWT_PUBLIC_KEY=               # PEM-encoded public key (RS256)
JWT_SECRET=                   # Shared secret (HS256 alternative)
JWT_AUDIENCE=                 # Comma-separated allowed audiences
JWT_ISSUER=                   # Comma-separated allowed issuers
JWKS_URI=                     # e.g. https://<tenant>.auth0.com/.well-known/jwks.json
JWT_CLOCK_TOLERANCE=60        # seconds of clock skew tolerance
JWT_MAX_AGE=                  # e.g. 1h, 30m

# ----------------------------------------
# CORS
# ----------------------------------------
CORS_ORIGINS=https://myunsaidapp.com,https://www.api.myunsaidapp.com,http://localhost:3000
CORS_METHODS=GET,POST,PUT,PATCH,DELETE,OPTIONS
CORS_HEADERS=Content-Type,Authorization,X-Requested-With
CORS_CREDENTIALS=true
CORS_MAX_AGE=600

# ----------------------------------------
# Metrics / Observability
# ----------------------------------------
METRICS_ENABLED=true
METRICS_PREFIX=unsaid_
METRICS_TOKEN=                # Optional bearer token to protect /metrics
PUSHGATEWAY_URL=              # Optional Prometheus Pushgateway URL

# ----------------------------------------
# Rate Limiting
# ----------------------------------------
RATE_LIMIT_WINDOW=900000      # 15 minutes in ms
RATE_LIMIT_MAX=100            # max requests per window per key
RATE_LIMIT_MESSAGE=Too many requests, please try again later.
REDIS_URL=                    # Optional: use Redis store for rate limiter

# ----------------------------------------
# Database (optional, for adapters)
# ----------------------------------------
DATABASE_URL=                 # e.g. postgres://user:pass@host:5432/db
DB_POOL_MIN=2
DB_POOL_MAX=10

# ----------------------------------------
# Redis (optional, for caching / rate limiting)
# ----------------------------------------
REDIS_PREFIX=unsaid:

# ----------------------------------------
# Features / Flags
# ----------------------------------------
ENABLED_FEATURES=             # e.g. tone,suggestions,advice
